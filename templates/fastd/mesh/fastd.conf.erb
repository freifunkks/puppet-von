log level error;
log to syslog level debug;

interface "ffks-mesh";
method "salsa2012+gmac";
bind <%= @ip_addr %>:10000;
include "../secret.conf";
mtu 1426;

include peers from "peers";
peer limit 30;

on up "
  ip link set up dev $INTERFACE
  batctl if add $INTERFACE
  batctl gw_mode server
  ip link set up dev bat0
";
