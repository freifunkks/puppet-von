iface ffks-br inet static
  hwaddress 02:00:0a:39:00:08
  address 10.54.<%= @vpn_nr %>.1
  netmask 255.255.0.0
  pre-up          /sbin/brctl addbr $IFACE
  up              /sbin/ip address add fdca:55e1:baca:baca::<%= @vpn_nr %>:1 dev $IFACE
  post-down       /sbin/brctl delbr $IFACE
  # be sure all incoming traffic is handled by the appropriate rt_table
  post-up         /sbin/ip rule add iif $IFACE table kassel priority 7000
  pre-down        /sbin/ip rule del iif $IFACE table kassel priority 7000
  # default route is unreachable
  post-up         /sbin/ip route add unreachable default table kassel
  post-down       /sbin/ip route del unreachable default table kassel
  # ULA route for rt_table kassel
  post-up         /sbin/ip -6 route add fd21:b4dc:4b1e::/64 proto static dev $IFACE table kassel
  post-down       /sbin/ip -6 route del fd21:b4dc:4b1e::/64 proto static dev $IFACE table kassel

# Virtual interface for fastd communication with vpn1
allow-hotplug ffks-client
iface ffks-client inet6 manual
  hwaddress ether f6:b7:a2:e4:9f:<%= @vpn_nr.to_i - 1 %>7
  pre-up          /sbin/modprobe batman-adv
  post-up         /usr/sbin/batctl -m bat0 if add $IFACE
  post-up         /sbin/ip link set dev bat0 up
  post-up         /sbin/ifconfig ffks-client mtu 1426


# Virtual interface for fastd meshin
allow-hotplug ffks-mesh
iface ffks-mesh inet6 manual
  hwaddress ether f6:b7:a2:e4:9f:<%= @vpn_nr.to_i - 1 %>8
  pre-up          /sbin/modprobe batman-adv
  post-up         /usr/sbin/batctl -m bat0 if add $IFACE
  post-up         /sbin/ip link set dev bat0 up
  post-up         /sbin/ifconfig fastd-mesh mtu 1426

# Virtual interface for batman communication
allow-hotplug bat0
iface bat0 inet6 manual
  hwaddress ether f6:b7:a2:e4:9f:<%= @vpn_nr.to_i - 1 %>9
  pre-up          /sbin/modprobe batman-adv
  post-up         /sbin/brctl addif ffks-br $IFACE
  post-up         /usr/sbin/batctl -m $IFACE it 10000
  post-up         /usr/sbin/batctl -m $IFACE vm server
  post-up         /usr/sbin/batctl -m $IFACE gw server  96mbit/96mbit
  pre-down        /sbin/brctl delif ffks-br $IFACE || true
  post-up         /sbin/ifconfig bat0 mtu 1500
